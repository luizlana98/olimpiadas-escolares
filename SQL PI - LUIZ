Atleta


-- Table: public.atleta

-- DROP TABLE IF EXISTS public.atleta;

CREATE TABLE IF NOT EXISTS public.atleta
(
    school_id character varying(50) COLLATE pg_catalog."default" NOT NULL,
    name character varying(100) COLLATE pg_catalog."default" NOT NULL,
    email character varying(100) COLLATE pg_catalog."default" NOT NULL,
    password character varying(100) COLLATE pg_catalog."default" NOT NULL,
    validation_token character varying(50) COLLATE pg_catalog."default",
    role character varying(20) COLLATE pg_catalog."default" NOT NULL
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.atleta
    OWNER to teste;


